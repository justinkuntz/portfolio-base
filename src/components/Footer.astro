---
import Container from "@components/Container.astro";
import { cn } from "@lib/utils";

import { SITE, SOCIALS } from "@consts";
import BackToTop from "@components/BackToTop.astro";
---

<footer class="animate bg-surface1">
  <Container size="xl">
    <div class="relative pb-6 pt-4">
      <div class="flex items-center justify-center sm:justify-end">
        <BackToTop />
      </div>
    </div>
    <div class="items-center grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div>
        &copy; {new Date().getFullYear()}
        {SITE.NAME}. All rights reserved. <a
          href="/legal/terms"
          class="text-current hover:text-surface10 transition-colors duration-300 ease-in-out"
        >
          Terms
        </a>,
        <a
          href="/legal/cookies"
          class="text-current hover:text-surface10 transition-colors duration-300 ease-in-out"
        >
          Cookies
        </a>, and
        <a
          href="/legal/privacy"
          class="text-current hover:text-surface10 transition-colors duration-300 ease-in-out"
        >
          Privacy
        </a>
      </div>

      <div class="order-1 sm:order-2 flex justify-center sm:justify-end">
        <div class="flex flex-wrap gap-1 items-center">
          <a
            href="/rss.xml"
            target="_blank"
            aria-label={`Rss feed for ${SITE.NAME}`}
            class={cn(
              "hidden md:flex",
              "size-10 rounded-full p-2 items-center justify-center",
              "bg-transparent hover:bg-surface10/5",
              "stroke-current hover:stroke-surface10",
              "transition-colors duration-300 ease-in-out"
            )}
          >
            <svg class="size-full">
              <use href="/ui.svg#rss"></use>
            </svg>
          </a>
          {
            SOCIALS.map((SOCIAL) => (
              <a
                href={SOCIAL.HREF}
                target="_blank"
                aria-label={`${SITE.NAME} on ${SOCIAL.NAME}`}
                class="group size-10 rounded-full p-2 items-center justify-center hover:bg-surface10/5 blend"
              >
                <svg class="size-full fill-current group-hover:fill-surface10 blend">
                  <use href={`/social.svg#${SOCIAL.ICON}`} />
                </svg>
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </Container>
</footer>
